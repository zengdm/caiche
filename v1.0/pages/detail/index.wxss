/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
page,.container{
  background: #ffe8cf;
  /* height: 100%; */
}
.container{
  padding-bottom: 30rpx;
}
/*上部*/
.header{
  position: relative;
  display: flex;
  justify-content: space-between;
  background: url(http://i2.dd-img.com/assets/image/1537169586-456042f57fe6dbbe-750w-475h.png) no-repeat top center;
  background-size: 100%;
  width: 100%;
  height: 475rpx;
  padding-top:120rpx;
}
.cx-img-box{
  display: flex;
  align-items: center;
  justify-content: center;
  width:240rpx;
  height: 167.5rpx;
  border-radius: 12rpx;
  /* margin:12.5rpx 0 0 47.5rpx; */
  margin:11.5rpx 0 0 47.5rpx;
  overflow: hidden;
}
.cx-img{width: 100%;height: 100%;}
.cx-prize-box{
  flex:1;
  height: 165rpx;
  margin-right: 30rpx;
  margin-top: 50rpx;
  font-size: 28rpx;
  color:#fdfbce;
  text-align: right;
}
.prize-num,.time-down{font-size: 50rpx;font-weight: bold;}
.user-avatar-box{
  position: absolute;
  right: 30rpx;
  bottom:0;
  width:101rpx;
  height: 101rpx;
  border:2rpx solid #fff;
  border-radius: 100%;
  overflow: hidden;
}
.cx-text{
  margin:20rpx 0 22rpx 30rpx;
  font-size: 30rpx;
  color:#997f5d;
}
/*竞猜车型*/
.btn{
  padding: 0;
  border:none;
  outline: none;
  border-radius: 10rpx;
  box-shadow: 0 6rpx 0 #ffd289, 0 18rpx 28rpx rgba(253,148,102,.9);
  /* transition: box-shadow .2s ease-in-out; */
  margin: 26rpx 30rpx;
}
.btn-text{
  display: block;
  height: 88rpx;
  line-height: 88rpx;
  background: #fbfbfb;
  font-size:30rpx;
  color: #7d4408;
  text-align: left;
  padding-left: 34rpx;
} 
.last-btn{margin-bottom: 66rpx;}
.submit-btn{margin-top: 40rpx;}
.submit-btn .btn-text{
  padding-left: 0;
  color:#ff5c4f;
  text-align: center;
}
.current-btn{
  box-shadow: 0 6rpx 0 #eb6c06, 0 18rpx 28rpx rgba(253,148,102,.9);
}
.current-btn .btn-text{
  background: #fe9a20;
  color: #fff;
}
.correct-btn{
  box-shadow: 0 6rpx 0 #03a452, 0 18rpx 28rpx rgba(253,148,102,.9);
}
.correct-btn .btn-text{
  background: #16d373;
  color: #fff;
}
