/*规则*/
.pop-box{
  position: fixed;
  left:0;
  right: 0;
  top:0;
  bottom:0;
  z-index: 2;
  background: rgba(0,0,0,0.5);
}
.rule-inner{
  position: absolute;
  width:636rpx;
  background: #ff9920;
  padding:42rpx 46rpx 48rpx 46rpx;
  border-radius: 40rpx;
  left:50%;
  top:50%;
  transform: translate(-50%, -50%);color:#fff;
  }
.hb-box .rule-inner{
  text-align: center;
}
.rule-title{
  font-size: 34rpx;
  margin-bottom: 28rpx;
  text-align: center;
}
.rule-text{font-size: 30rpx;line-height: 1.6;}
.pop-box-btn{
  background: #fff;
  width: 241rpx;
  height: 72rpx;
  overflow: hidden;
  line-height: 72rpx;
  text-align: center;
  color: #333;
  font-size: 34rpx;
  margin-top: 32rpx;
}
.close-pop-btn{
  margin-top: 44rpx;
}
/*竞猜结果*/
.result-box{
  margin-top:-24rpx;
}
.result-text{
  font-size: 30rpx;
  color:#997f5d;
  text-align: center;
  line-height: 56rpx;
}
.result-title{
  line-height: 88rpx;
  font-weight: bold;
  font-size: 50rpx;
}
.timeDown.result-title{
  font-size: 56rpx;
  margin-top: -15rpx;
}
.timeDown .number{
  display: inline-block;width: 68rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.bonus-num{
  font-size: 60rpx;
  line-height: 78rpx;
  font-weight:bold;
}
.no-activity{
  background: #ffe8cf url(http://i2.dd-img.com/assets/image/1537497303-66bed80c5b4475b3-750w-716h.jpg) no-repeat top center;
  background-size: 100%;
  padding-top:716rpx;

}
