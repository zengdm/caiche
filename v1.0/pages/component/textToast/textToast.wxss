.weui-toast-text{
  position: fixed;
  bottom:10%;
  z-index: 100;
  padding: 15rpx 25rpx;
  font-size: 22rpx;
  line-height: 1.4;
  background: rgba(40, 40, 40, 0.75);
  border-radius: 5px;
	color: #FFFFFF;
  max-width: 85%;
  left:50%;
  -webkit-transform: translateX(-50%);
	transform: translateX(-50%);
  text-align: center;
  animation: opacity 3s ease-in-out 0s 1 alternate;  
	-webkit-animation: opacity 3s ease-in-out 0s 1 alternate;  
	-moz-animation: opacity 3s ease-in-out 0s 1 alternate;  
	-o-animation: opacity 3s ease-in-out 0s 1 alternate;
	opacity: 0;   
}
@keyframes opacity {
  	0% {z-index: 9999;opacity: 0; }
  	10% {z-index: 9999;opacity: 0.8; }
  	20% {z-index: 9999;opacity: 1; }
  	80% {z-index: 9999;opacity: 1; }
  	90% {z-index: 9999;opacity: 0.8; }
  	100% {opacity: 0;z-index: -1; } 
}
