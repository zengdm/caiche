}
/*竞猜车型*/
.btn{
  padding: 0;
  border:none;
  outline: none;
  border-radius: 10rpx;
  box-shadow: 0 6rpx 0 #ffd289, 0 18rpx 28rpx rgba(253,148,102,.9);
  /* transition: box-shadow .2s ease-in-out; */
  margin: 26rpx 30rpx;
}
.btn-text{
  display: block;
  height: 88rpx;
  line-height: 88rpx;
  background: #fbfbfb;
  font-size:30rpx;
  color: #7d4408;
  text-align: left;
  padding-left: 34rpx;
} 
.last-btn{margin-bottom: 66rpx;}
.submit-btn{margin-top: 40rpx;}
.submit-btn .btn-text{
  padding-left: 0;
  color:#ff5c4f;
  text-align: center;
}
.current-btn{
  box-shadow: 0 6rpx 0 #eb6c06, 0 18rpx 28rpx rgba(253,148,102,.9);
}
.current-btn .btn-text{
  background: #fe9a20;
  color: #fff;
}
.correct-btn{
  box-shadow: 0 6rpx 0 #03a452, 0 18rpx 28rpx rgba(253,148,102,.9);
}
.correct-btn .btn-text{
  background: #16d373;
  color: #fff;
}
