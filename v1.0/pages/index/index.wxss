/*规则*/
.pop-box{
  position: fixed;
  left:0;
  right: 0;
  top:0;
  bottom:0;
  z-index: 2;
  background: rgba(0,0,0,0.5);
}
.rule-inner{
  position: absolute;
  width:636rpx;
  background: #ff9920;
  padding:42rpx 46rpx 48rpx 46rpx;
  border-radius: 40rpx;
  left:50%;
  top:50%;
  transform: translate(-50%, -50%);color:#fff;
  }
.hb-box .rule-inner{
  text-align: center;
}
.rule-title{
  font-size: 34rpx;
  margin-bottom: 28rpx;
  text-align: center;
}
.rule-text{font-size: 30rpx;line-height: 1.6;}
.pop-box-btn{
  background: #fff;
  width: 241rpx;
  height: 72rpx;
  overflow: hidden;
  line-height: 72rpx;
  text-align: center;
  color: #333;
  font-size: 34rpx;
  margin-top: 32rpx;
}
.close-pop-btn{
  margin-top: 44rpx;
}
